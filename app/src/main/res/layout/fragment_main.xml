<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.unideveloper.weatherapp.MainFragment">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: "
                    android:textSize="18sp"
                    android:textColor="#2828a7"
                    android:padding="5dp"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kolkata,West Bengal"
                    android:textStyle="bold"
                    android:textColor="#e2ae11"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:maxLength="50"
                    android:gravity="center"
                    android:id="@+id/selectedLoc"
                    android:fontFamily="serif-monospace"/>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Change"
                android:layout_gravity="right"
                android:textColor="#fb3535"
                android:padding="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/changeLoc"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/na"
                    android:layout_gravity="center"
                    android:id="@+id/selectedWeaIc"/>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="20"
                android:text="Clear"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:id="@+id/selectedWea"
                android:padding="10dp"
                android:textColor="#54aa2e"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25 \u00B0C"
                android:maxLines="1"
                android:maxLength="5"
                android:gravity="center_horizontal"
                android:textSize="60sp"
                android:layout_gravity="bottom"
                android:textColor="#6c249c"
                android:id="@+id/selectedTemp"
                android:padding="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/purple"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
